{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2015", "esnext"],
    "downlevelIteration": true
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*", "node_modules"]
}
